<Window x:Class="logistic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:logistic"
        mc:Ignorable="d"
        Title="Вход" Height="400" Width="500" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Btn_Check" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="145" Height="56" FontSize="24" Click="Btn_Check_Click" Margin="174,0,174.6,10.4"/>
        <Label Content="Введите логин и пароль для входа&#xA;" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="84,42,75.2,0"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="50" Margin="174,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" FontSize="32"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top" FontSize="24"/>
        <PasswordBox x:Name="passwordBox" PasswordChar="*" HorizontalAlignment="Left" Height="50" Margin="174,219,0,0" VerticalAlignment="Top" Width="310" FontSize="32"/>
    </Grid>
</Window>
